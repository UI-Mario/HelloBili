page{
  background-color: rgb(240, 240, 240);
}
.nav_wrap{
  background-color:white;
}
.nav{
  white-space: nowrap;
  padding: 5rpx 0;
}

.nav_item{
  padding: 20rpx 45rpx;
  font-size: 30rpx;
  display: inline-block;
}
.nav_item.active{
  border-bottom: 5rpx solid #fb7299;
  color: #fb7299;
}

.slides{
  padding-top: 20rpx;
}
.slides swiper{
}
.slides navigator{
  width: 100%;
  height: 100%;
}
.slides image{
  width: 100%;
  height: 100%;
}

.video_info image{
  width: 37rpx;
  height: 37rpx;
}

/* 视频列表 */
.video_wrap{
  display: flex;
  flex-wrap: wrap;
  padding: 5rpx;
  justify-content: space-between;
}
.video_item{
  width: 49%;
  margin-bottom: 20rpx;
  border-radius: 18rpx;
  background-color: white;
}
.video_img{
  position: relative;
}
.dis_pic{
  width: 100%;
  border-radius: 10rpx;
}
.video_img .video_info{
  position: absolute;
  bottom: 10rpx;
  width: 100%;
  display: flex;
  justify-content: space-around;
  color: white;
  font-size: 24rpx;
}
.play_count{
  display: inline-flex;
}
.video_review{
  display: inline-flex;
}
.video_title{
  font-size: 30rpx;
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;

}
.video_type{
  font-size: 24rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  color: grey;
}