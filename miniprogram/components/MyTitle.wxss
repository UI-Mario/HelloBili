/* components/MyTitle.wxss */
.my_title{
  display: flex;
  align-items: center;
  padding: 10rpx;
  background-color: white;
}

.logo{
  flex: 7;
}

.search_icon{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.user_icon{
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}

.user_icon image{
  border-radius: 50%;
  border: 1rpx solid silver;
}

.download_app{
  flex: 3;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fb7299;
  color: #fff;
  border-radius: 10rpx;
  padding: 10rpx;
}